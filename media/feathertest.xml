        </Combobox>
        <Resource asset="feathergui_white.png" flags="EXPANDX" left="210" top="60" height="55"/>
      </Tab>
      <Tab name="Long Tab">
        <Textbox area="140, 30, 210, 150" flags="WORDWRAP" placeholder="placeholder" />
        <Dropdown area="10, 200, 150, 230" flags="TILEY" max-height="60">
          <Text area="0, 0, 100%, 20" text="Drop 1" />
          <Text area="0, 0, 100%, 20" text="Drop 2" />
          <Text flags="EXPAND" text="Drop 3" />
          <Text area="0, 0, 100%, 20" text="Drop 4" />
        </Dropdown>
        <List area="-350:1, 30, -250:1, 0" flags="TILEY|EXPANDY|MULTISELECT|DRAGGABLE|SNAP" value="3" dividercolor="0x000000">
          <ListItem area="0, 0, 100%, 20" />
          <Text area="0, 0, 100%, 20" text="List 1" />
          <Text area="0, 0, 100%, 20" text="List 2" />
          <Text area="0, 0, 100%, 20" text="List 3" />
          <Text area="0, 0, 100%, 20" text="List 4" />
          <ListItem area="0, 0, 100%, 20" />
          <Text area="0, 0, 100%, 20" text="List 5" />
        </List>
        <Treeview area="240, 10, 340, 150" contextmenu="#testcontext">
          <TreeItem contextmenu="#testcontext">
            <Text text="Parent Item 1" flags="EXPAND"/>
            <TreeItem contextmenu="#testcontext">
              <Text text="Item 4" flags="EXPAND"/>
            </TreeItem>
            <TreeItem contextmenu="#testcontext">
              <Text text="Item 5" flags="EXPAND" />
            </TreeItem>
            <TreeItem>
              <Text text="Item 6" flags="EXPAND"/>
            </TreeItem>
          </TreeItem>
          <TreeItem>
            <Text text="Parent Item 2" flags="EXPAND"/>
            <TreeItem>
              <Text text="Item 6" flags="EXPAND"/>
            </TreeItem>
          </TreeItem>
          <TreeItem>
            <Text text="Parent Item 3" flags="EXPAND"/>
          </TreeItem>
        </Treeview>
      </Tab>
      <Tab name="Tab 3">
        <Box area="0,0,100%,0" flags="TILE|EXPANDY|IGNOREMARGINEDGE" padding="5,5,5,5">
          <Resource uv="3,3,3,3" area="0,0,100%,100%" color="0x999999" flags="RECT|BACKGROUND|IGNORE"/>
          <Box area="0,0,100%,0" flags="TILE|EXPANDY|IGNOREMARGINEDGE" padding="5,5,5,5" max-width="90" min-width="60">
            <Resource uv="3,3,3,3" area="0,0,100%,100%" color="0xBBBB00" flags="RECT|BACKGROUND|IGNORE"/>
            <Resource uv="3,3,3,3" area="0,0,50,25" color="0xDDDDDD" flags="RECT" margin="0,5,0,0" />
            <Resource uv="3,3,3,3" area="0,0,30,25" color="0xDDDDDD" flags="RECT" margin="10,5,0,0" />
          </Box>
          <Box area="0,0,100%,0" flags="TILE|EXPANDY|IGNOREMARGINEDGE" padding="5,5,5,5" margin="10,5,0,0" max-width="250">
            <Resource uv="3,3,3,3" area="0,0,100%,100%" color="0xBBBBBB" flags="RECT|BACKGROUND|IGNORE"/>
            <Resource uv="3,3,3,3" area="0,0,30,25" color="0xDDDDDD" flags="RECT" margin="10,5,0,0" />
            <Resource uv="3,3,3,3" area="0,0,100%,25" color="0xDDDDDD" flags="RECT" margin="10,5,0,0" min-width="60" max-width="100"/>
            <Resource uv="3,3,3,3" area="0,0,100%,25" color="0xDDDDDD" flags="RECT" margin="10,5,0,0" min-width="20"/>
            <Resource uv="3,3,3,3" area="0,0,100%,25" color="0xDDDDDD" flags="RECT" margin="10,5,0,0" min-width="20" max-width="100"/>
          </Box>
        </Box>
      </Tab>
      <Tab name="Tab 4">
        <Grid area="0,0,100%,100%" margin="20,20,20,20" flags="TILEY|DRAGGABLE" splitter="2,2">
          <Column name="Column 1"/>
          <Column name="Column 2"/>
          <Column name="Column 3"/>
          <Column name="Column 4"/>
          <Column name="Column 5"/>
          <GridRow flags="TILEX|EXPAND">
            <Text text="text 11" flags="EXPANDY"/>
            <Text text="text 12" flags="EXPANDY"/>
            <Text text="text 13" flags="EXPANDY"/>
            <Text text="text 14" flags="EXPANDY"/>
          </GridRow>
          <GridRow flags="TILEX|EXPAND">
            <Text text="text 21" flags="EXPANDY"/>
            <Text text="text 22" flags="EXPANDY"/>
            <Text text="text 23" flags="EXPANDY"/>
            <Text text="text 24" flags="EXPANDY"/>
          </GridRow>
          <GridRow flags="TILEX|EXPAND">
            <Text text="text 31" flags="EXPANDY"/>
            <Text text="text 32" flags="EXPANDY"/>
            <Text text="text 33" flags="EXPANDY"/>
            <Text text="text 34" flags="EXPANDY"/>
          </GridRow>
          <GridRow flags="TILEX|EXPAND" >
            <Text text="text 41" flags="EXPANDY"/>
            <Text text="text 42" flags="EXPANDY"/>
            <Text text="text 43" flags="EXPANDY"/>
            <Text text="text 44" flags="EXPANDY"/>
          </GridRow>
        </Grid>
      </Tab>
    </TabControl>
  </Window>
  <Skin name="testskin" xmlns:fg="featherGUI">
    <Skin name="Scrollbar">
      <Skin name="Scrollbar$horzbg" area="0, -15:1, 0:1, 0:1" padding="15,0,15,0">
        <Resource uv="0,0,0,0" area="0,0,100%,100%" color="0xBBBBBB" edgecolor="0" outline="0" flags="RECT|BACKGROUND|IGNORE" />
      </Skin>
      <Skin name="Scrollbar$vertbg" area="-15:1, 0, 0:1, 0:1" padding="0,15,0,15">
        <Resource uv="0,0,0,0" area="0,0,100%,100%" color="0xBBBBBB" edgecolor="0" outline="0" flags="RECT|BACKGROUND|IGNORE" />
      </Skin>
      <Skin name="Scrollbar$corner">
        <Resource uv="0,0,0,0" area="0,0,100%,100%" color="0xBBBBBB" edgecolor="0" outline="0" flags="RECT|BACKGROUND|IGNORE" />
      </Skin>
      <Skin name="Scrollbar$scrollhorz">
        <Resource uv="3,3,3,3" area="0,20%,100%,80%" color="0x00000066" flags="RECT|BACKGROUND|IGNORE">
          <Style name="disabled" color="0x00000022"/>
          <Style name="neutral" color="0x00000066"/>
        </Resource>
      </Skin>
      <Skin name="Scrollbar$scrollvert">
        <Resource uv="3,3,3,3" area="20%,0,80%,100%" color="0x00000066" flags="RECT|BACKGROUND|IGNORE">
          <Style name="disabled" color="0x00000022"/>
          <Style name="neutral" color="0x00000066"/>
        </Resource>
      </Skin>
      <Skin name="Scrollbar$scrollleft" area="0,0,15,15">
        <Resource uv="6,6,6,0.5" area="50%,50%,130%,110%" color="0x000000" rotation="4.7123" flags="TRIANGLE|BACKGROUND" center="50%, 50%">
          <Style name="disabled" edgecolor="0x000000"/>
          <Style name="neutral" edgecolor="0x000000"/>
        </Resource>
      </Skin>
      <Skin name="Scrollbar$scrolltop" area="0,0,15,15">
        <Resource uv="6,6,6,0.5" area="50%,60%,130%,120%" color="0x000000" flags="TRIANGLE|BACKGROUND" center="50%, 50%">
          <Style name="disabled" edgecolor="0x000000"/>
          <Style name="neutral" edgecolor="0x000000"/>
        </Resource>
      </Skin>
      <Skin name="Scrollbar$scrollright" area="-15:1, 0, 0:1, 15">
        <Resource uv="6,6,6,0.5" area="50%,50%,130%,110%" color="0x000000" rotation="1.5708" flags="TRIANGLE|BACKGROUND" center="50%, 50%">
          <Style name="disabled" edgecolor="0x000000"/>
          <Style name="neutral" edgecolor="0x000000"/>
        </Resource>
      </Skin>
      <Skin name="Scrollbar$scrollbottom" area="0, -15:1, 15, 0:1">
        <Resource uv="6,6,6,0.5" area="50%,60%,130%,120%" rotation="3.1415" color="0x000000" flags="TRIANGLE|BACKGROUND"center="50%, 50%">
          <Style name="disabled" edgecolor="0x000000"/>
          <Style name="neutral" edgecolor="0x000000"/>
        </Resource>
      </Skin>
    </Skin>
    <Skin name="Window" flags="RESIZABLE" color="0xFFFFFF" font="14 arial" padding="3, 30, 3, 3">
      <Resource flags="BACKGROUND|RECT" outline="2" edgecolor="0xAAAAAAFF" color="0xBBBBBBFF" uv="14 14 14 14" area="0 0 100% 100%" />
      <Resource uv="14 14 0 0" area="0,0,100%,30" color="0x666666" edgecolor="0" outline="1" flags="RECT|BACKGROUND" />
      <Skin name="Window$text" margin="12,4,0,0" />
      <Skin name="Window$close" area="-25:1, 7, -10:1, 22" >
        <Resource area="50%,50%,150%,70%" color="0xFFFFFFFF" flags="RECT|BACKGROUND|NOCLIP" rotation="0.785" center="50%,50%"/>
        <Resource area="50%,50%,150%,70%" color="0xFFFFFFFF" flags="RECT|BACKGROUND|NOCLIP" rotation="-0.785" center="50%,50%"/>
      </Skin>
      <Skin name="Window$restore" area="-50:1, 7, -35:1, 22" >
        <Resource area="0,0,100%,100%" color="0" edgecolor="0xFFFFFFFF" outline="2" flags="RECT|BACKGROUND" />
        <Resource area="0,0%,100%,30%" color="0xFFFFFFFF" flags="RECT|BACKGROUND" />
      </Skin>
      <Skin name="Window$minimize" area="-75:1, 7, -60:1, 22" >
        <Resource area="0,80%,100%,100%" color="0xFFFFFFFF" flags="RECT|BACKGROUND" />
      </Skin>
      <Skin name="Button" color="0x000000" font="14 bold arial" padding="5,5,5,5">
        <Resource uv="5,5,5,5" area="0,0,100%,100%" color="0" edgecolor="0x444444" outline="2" flags="RECT|BACKGROUND|SNAP">
          <Style name="neutral" color="0" edgecolor="0x444444" transition="1000 ease-in 0" flags="-NOCLIP"/>
          <Style name="active" color="0x333333" edgecolor="0x333333" transition="1000 cubic(0,1,0,1) 0"  flags="NOCLIP"/>
          <Style name="hover" color="0x444444" edgecolor="0x444444" transition="1000 ease-in 0"  flags="NOCLIP"/>
        </Resource>
        <Style name="neutral" color="0x000000" />
        <Style name="active" color="0xFFFFFF" />
        <Style name="hover" color="0xFFFFFF" />
      </Skin>
      <Skin name="Checkbox" color="0xFFFFFFFF" font="14 arial" padding="25,0,5,0">
        <Resource uv="3,3,3,3" area="5, 0:0.5, 20, 15:0.5" color="0" edgecolor="0x444444" outline="2" flags="RECT|BACKGROUND|SNAP" center="0 50%">
          <Style name="neutral" color="0" />
          <Style name="active" color="0x00000022" />
          <Style name="hover" color="0x00000011" />
        </Resource>
        <Resource uv="3,3,3,3" area="8, 0:0.5, 17, 9:0.5" color="0x444444" edgecolor="0" outline="0" flags="RECT|BACKGROUND|SNAP" center="0 50%">
          <Style name="default" flags="HIDDEN" />
          <Style name="checked" flags="-HIDDEN" />
          <Style name="indeterminate" flags="HIDDEN" />
        </Resource>
      </Skin>
      <Skin name="Radiobutton" color="0xFFFFFFFF" font="14 arial" padding="25,5,5,5">
        <Resource uv="0,6.2832,0,6.2832" margin="0,1,0,-1" area="0, 0:0.5, 17, 17:0.5" color="0" edgecolor="0x444444" outline="2" flags="CIRCLE|BACKGROUND|SNAP" center="0 50%">
          <Style name="neutral" color="0" />
          <Style name="active" color="0x00000022" />
          <Style name="hover" color="0x00000011" />
        </Resource>
        <Resource uv="0,6.2832,0,6.2832" margin="0,1,0,-1" area="4, 0:0.5, 13, 9:0.5" color="0x444444" flags="CIRCLE|BACKGROUND|SNAP" center="0 50%">
          <Style name="default" flags="HIDDEN" />
          <Style name="checked" flags="-HIDDEN" />
        </Resource>
      </Skin>
      <Skin name="Progressbar" color="0xFFFFFF" font="14 arial" padding="0,0,0,0">
        <Skin name="Progressbar$bar">
          <Resource uv="6,6,6,6" area="0,0,100%,100%" color="0xA0A0A0" edgecolor="0" outline="0" flags="RECT" />
        </Skin>
        <Resource uv="6,6,6,6" area="0,0,100%,100%" color="0" edgecolor="0x505050" outline="3" flags="RECT|BACKGROUND" order="1"/>
      </Skin>
      <Skin name="Slider" padding="5,0,5,0">
        <Skin name="Slider$slider" area="-5,0,5,20" >
					<Resource flags="NOCLIP|SNAPX|SNAPY|RECT" outline="0" edgecolor="0x00000000" color="0x666666FF" uv="5 5 5 5" area="0 0 100% 100%"/>
        </Skin>
				<Curve flags="SNAPX|SNAPY" color="0x666666FF" area="0 50% 100% 1:0.50"/>
      </Skin>
      <Skin name="Box" inherit="Scrollbar" />
      <Skin name="Dropdown" hovercolor="0x99990099" selectcolor="0xAAAA0000">
        <Resource uv="3,3,3,3" area="0,0,100%,100%" color="0xFFFFFF99" edgecolor="0xAAAAAA" outline="1" flags="RECT|BACKGROUND|IGNORE" />
        <Skin name="Dropdown$box" inherit="Scrollbar">
          <Resource uv="3,3,3,3" area="0,0,100%,100%" color="0xFFFFFF99" edgecolor="0xAAAAAA" outline="1" flags="RECT|BACKGROUND|IGNORE" />
        </Skin>
      </Skin>
    </Skin>
    <Skin name="TabControl">
      <Skin name="Tabcontrol$header" flags="TILE"></Skin>
      <Skin name="Tabcontrol$panel">
				<Resource flags="BACKGROUND|SNAPX|SNAPY|RECT" color="0xEEEEEEFF" uv="0 0 14 14" area="0 0 100% 100%"/>
      </Skin>
      <Skin name="Tabcontrol$toggle" color="0x000000" padding="12,2,12,2" font="14 arial">
        <Resource uv="5,5,0,0" area="0,0,100%,100%" color="0xA6C6DF" flags="RECT|BACKGROUND|SNAP">
          <Style name="neutral" color="0xA6C6DF" />
          <Style name="neutral+selected" color="0xE3EFF9" />
          <Style name="hover" color="0xB6D6EF" />
          <Style name="hover+selected" color="0xE9F5FF"  />
          <Style name="active" color="0xB6D6EF" />
          <Style name="active+selected" color="0xE9F5FF" />
        </Resource>
        <!--<Style name="hover" reorder="bottom"/>-->
      </Skin>
    </Skin>
    <Skin id="Treeview">
      <Resource uv="3 3 3 3" area="0,0,100%,100%" color="0xFFFFFF99" edgecolor="0xAAAAAAFF" outline="1" flags="RECT|BACKGROUND|IGNORE" />
      <Skin name="Text" color="0x000000" font="10 arial" />
      <Skin name="TreeItem" padding="20,0,0,0" flags="EXPAND">
        <Resource uv="2,2,2,2" area="0,0,100%,100%" color="0x6666AA99" edgecolor="0xAAAAFFAA" outline="1" flags="RECT|BACKGROUND|IGNORE|SNAP">
          <Style name="neutral+focused" flags="-HIDDEN"/>
          <Style name="neutral" flags="HIDDEN"/>
        </Resource>
        <Skin name="TreeItem$arrow" area="4,1,16,13">
          <Resource uv="3,3,3,3" area="0,0,100%,100%" color="0" edgecolor="0xDDDDDD" outline="1" flags="RECT|BACKGROUND|IGNORE|SNAP" />
          <Resource uv="0,0,0,0" area="-1:0.5, 2, 1:0.5, -2:1" color="0xDDDDDD" flags="RECT|BACKGROUND|IGNORE|SNAP">
            <Style name="hidden" flags="-HIDDEN"/>
            <Style name="visible" flags="HIDDEN"/>
          </Resource>
          <Resource uv="0,0,0,0" area="2, -1:0.5, -2:1, 1:0.5" color="0xDDDDDD" flags="RECT|BACKGROUND|IGNORE|SNAP" />
        </Skin>
      </Skin>
    </Skin>
    <Skin name="List" selectcolor="0xDD9999" hovercolor="0x999999" dragcolor="0xCCCCCC">
      <Resource uv="3,3,3,3" area="0,0,100%,100%" color="0xFFFFFF99" edgecolor="0xAAAAAA" outline="1" flags="RECT|BACKGROUND|SNAP" />
    </Skin>
    <Skin name="Combobox" hovercolor="0x999999">
      <Skin name="fgCombobox$textbox" area="0,0,-30:1,0:1" color="0x000000" font="14 arial" placecolor="0x00000088" cursorcolor="0x000000" selectcolor="0x0000AAAA" padding="3,3,3,3" inherit="Scrollbar"/>
      <Skin name="Dropdown$box" inherit="Scrollbar">
        <Resource uv="3,3,3,3" area="0,0,100%,100%" color="0xFFFFFF99" edgecolor="0xAAAAAA" outline="1" flags="RECT|BACKGROUND|IGNORE" />
      </Skin>
      <Resource uv="3,3,3,3" area="0,0,100%,100%" color="0xFFFFFF99" edgecolor="0xAAAAAA" outline="1" flags="RECT|BACKGROUND|SNAP" />
    </Skin>
    <Skin name="ListItem">
      <Resource uv="3,3,3,3" area="0,0,100%,100%" color="0xFFFFFF99" edgecolor="0xAAAAAA" outline="1" flags="RECT|BACKGROUND|SNAP">
        <Style name="hover" color="0x00990099" />
        <Style name="neutral" color="0x99009999" />
        <Style name="neutral+selected" color="0x009999CC" />
        <Style name="hover+selected" color="0x00BBBBCC" />
      </Resource>
    </Skin>
    <Skin name="Grid" columndividercolor="0x000000FF">
      <Skin name="List">
        <Resource uv="3,3,0,0" area="0,0,100%,100%" color="0x00000022" flags="RECT|BACKGROUND|SNAP" />
      </Skin>
      <Resource uv="3,3,3,3" area="0,0,100%,100%" color="0xFFFFFF99" edgecolor="0xAAAAAA" outline="1" flags="RECT|BACKGROUND" />
    </Skin>
    <Skin name="Textbox" color="0x000000" font="14 arial" placecolor="0x00000088" cursorcolor="0x000000" selectcolor="0x0000AAAA" padding="3,3,3,3" inherit="Scrollbar">
      <Resource uv="3,3,3,3" area="0,0,100%,100%" color="0xFFFFFF99" edgecolor="0xAAAAAA" outline="1" flags="RECT|BACKGROUND|IGNORE" />
    </Skin>
    <Skin name="Text" color="0x000000" font="14 arial" />
    <Skin name="Menu" hovercolor="0xFFFFFFFF">
      <Resource uv="0,0,0,0" area="0,0,100%,100%" color="0xBBBBBB" edgecolor="0xAAAAAA" outline="0" flags="RECT|BACKGROUND" />
    </Skin>
    <Skin name="Submenu">
      <Resource uv="0,3,3,0" area="0,0,100%,100%" color="0xFFFFFFCC" edgecolor="0xAAAAAA" outline="1" flags="RECT|BACKGROUND" />
      <Skin name="Submenu$seperator" area="0,0,100%,5">
        <Resource area="0,0,100%,100%" color="0x000000DD" outline="0" flags="RECT|BACKGROUND" margin="0,2,0,2" />
      </Skin>
      <Skin name="MenuItem" padding="0,0,20,0" />
      <Skin name="Submenu$arrow" area="100%, 50%, 100%, 50%" center="100%,50%">
        <Resource area="0,0,10,10" color="0xCCCCCCDD" outline="0" flags="RECT|IGNORE" />
      </Skin>
    </Skin>
    <Skin name="Debug" color="0xFFFFFFFF" font="14 arial">
      <Skin name="Grid" dividercolor="0x999999">
        <Skin name="List">
          <Resource uv="3,3,0,0" area="0,0,100%,100%" color="0xCCCCCCFF" flags="RECT|BACKGROUND|SNAP" />
        </Skin>
        <Resource uv="3,3,3,3" area="0,0,100%,100%" color="0xFFFFFF99" edgecolor="0xAAAAAA" outline="1" flags="RECT|BACKGROUND" />
      </Skin>
      <Skin name="Text" color="0x000000" font="14 arial" />
    </Skin>
  </Skin>
</fg:Layout>