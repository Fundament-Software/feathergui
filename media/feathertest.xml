          <MenuItem />
          <MenuItem text="Quit" />
        </Submenu>
      </MenuItem>
      <MenuItem text="Edit">
        <Submenu>
          <MenuItem text="Cut" />
          <MenuItem text="Copy" />
          <MenuItem text="Paste" />
          <MenuItem />
